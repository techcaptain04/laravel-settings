{
    "name": "sajadsdi/lara-setting",
    "description": "Setting Management For Laravel",
    "type": "laravel-package",
    "license": "MIT",
    "autoload": {
        "files": [
            "src/Support/helpers.php"
        ],
        "psr-4": {
            "Sajadsdi\\LaraSetting\\": "src/"
        }
    },
    "authors": [
        {
            "name": "SajaD SaeeDi",
            "email": "thunder11like@gmail.com"
        }
    ],
    "require": {
        "php": "^8.0",
        "sajadsdi/array-dot-notation": "^1.0"
    },
    "scripts": {
        "post-install-cmd": [
            "@php artisan vendor:publish --tag=lara-setting",
            "@php artisan setting:install --with=table"
        ],
        "post-update-cmd": [
            "@php artisan vendor:publish --tag=lara-setting",
            "@php artisan setting:install"
        ]
    }
}
